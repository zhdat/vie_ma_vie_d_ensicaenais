<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane styleClass="dialog" stylesheets="@LoginDialog.css" xmlns="http://javafx.com/javafx/8.0.111"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.ensicaen.ecole.genielogiciel.view.LoginView">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="50.0" vgrow="NEVER"/>
        <RowConstraints minHeight="50.0" prefHeight="30.0" vgrow="NEVER"/>
        <RowConstraints minHeight="50.0" prefHeight="30.0" vgrow="NEVER"/>
    </rowConstraints>
    <children>
        <Label alignment="CENTER" prefHeight="16.0" prefWidth="160.0" styleClass="text" text="%login.message.text"
               GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="_nickName" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        <Label alignment="CENTER" prefHeight="16.0" prefWidth="160.0" styleClass="text" text="%filiere.message.text"
               GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="_filiere" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Label alignment="CENTER" prefHeight="16.0" prefWidth="160.0" styleClass="text" text="%provenance.message.text"
               GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="_provenance" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Button defaultButton="true" onAction="#launchGame" prefWidth="200.0" text="%launch.button.text"
                GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="3"/>
        <Label fx:id="_errorLabel" textFill="#ef0000" GridPane.columnIndex="0" GridPane.columnSpan="2"
               GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2"/>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</GridPane>
